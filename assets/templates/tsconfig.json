{
    "compilerOptions": {
        "jsx": "preserve",
        "strict": true,
        "importHelpers": true,

        "sourceMap": true,

        "declaration": true,
        "declarationMap": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "noEmitOnError": true,

        "skipLibCheck": true,

        "esModuleInterop": true,
        "lib": ["ESNext"],
        "target": "esnext",

        "moduleResolution": "Node",
        "module": "CommonJS"
    },
    "exclude": [
        "node_modules"
    ],
    "files": [
        "src/**/*"
    ]
}
